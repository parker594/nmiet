# Environment Configuration for Military AI Simulation

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/military-ai-sim

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
COMMAND_SECRET=your-command-level-secret-key

# Google Earth Engine API
GOOGLE_EARTH_ENGINE_KEY=your-google-earth-engine-api-key
GOOGLE_EARTH_ENGINE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_EARTH_ENGINE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----

# OpenStreetMap Configuration
OSM_NOMINATIM_URL=https://nominatim.openstreetmap.org
OSM_USER_AGENT=MilitaryAISimulation/1.0

# Weather API
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Satellite Imagery APIs
NASA_API_KEY=your-nasa-api-key
USGS_USERNAME=your-usgs-username
USGS_PASSWORD=your-usgs-password

# AI Model Configuration
PYTHON_PATH=python
AI_MODELS_PATH=./ai-models
MODEL_SERVER_URL=http://localhost:5000

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/json,text/csv

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SESSION_TIMEOUT_MS=1800000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# External Services
TERRAFORM_API_KEY=your-terrain-api-key
ELEVATION_API_KEY=your-elevation-api-key

# Development Tools
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false

# Production Settings (set these in production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SECURE_COOKIES=true
# TRUST_PROXY=true